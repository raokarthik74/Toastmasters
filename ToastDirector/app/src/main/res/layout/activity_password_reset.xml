<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.karthikravindrarao.ToastDirector.passwordReset">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID"
        android:id="@+id/resetUserIdTextView"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resetUserIdEditText"
        android:layout_below="@+id/resetUserIdTextView"
        android:singleLine="true"
        android:hint="Enter User ID"
        />

    <TextView
        android:textColor="@color/primary_text"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Password"
        android:id="@+id/resetCurrentPasswordTextView"
        android:layout_below="@+id/resetUserIdEditText"
        android:textSize="20sp"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resetCurrentPasswordEditText"
        android:layout_below="@+id/resetCurrentPasswordTextView"
        android:singleLine="true"
        android:hint="Enter Current Password"
        android:inputType="textPassword"
        />

    <TextView
        android:textColor="@color/primary_text"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter New Password"
        android:id="@+id/resetEnterNewPasswordTextView"
        android:layout_below="@+id/resetCurrentPasswordEditText"
        android:textSize="20sp"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resetNewPasswordEditText"
        android:layout_below="@+id/resetEnterNewPasswordTextView"
        android:hint="Enter New Password"
        android:singleLine="true"
        android:inputType="textPassword"
        />

    <TextView
        android:textColor="@color/primary_text"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-Enter New Password"
        android:id="@+id/resetReEnterNewPasswordTextView"
        android:layout_below="@+id/resetNewPasswordEditText"
        android:textSize="20sp"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resetReEnterNewPasswordEditText"
        android:layout_below="@+id/resetReEnterNewPasswordTextView"
        android:hint="Enter New Password"
        android:singleLine="true"
        android:inputType="textPassword"
        />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="DONE"
        android:id="@+id/resetPasswordButton"
        android:textColor="@color/icons"
        android:onClick="checkResetButton"
        android:layout_below="@id/resetReEnterNewPasswordEditText" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarOfResetPassword"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:visibility="invisible"
        android:layout_below="@id/resetPasswordButton"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
