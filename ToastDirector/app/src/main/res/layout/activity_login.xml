<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.karthikravindrarao.TM_District_92.LoginActivity">

    <TextView
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter User ID"
        android:id="@+id/enterUserId"
        android:textSize="20sp"
        />

    <EditText
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userIdForLogin"
        android:singleLine="true"
        android:layout_below="@+id/enterUserId" />

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Password"
        android:id="@+id/enterPassword"
        android:layout_below="@+id/userIdForLogin"
        android:textSize="20sp"
        />

    <EditText
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordForLogin"
        android:layout_below="@+id/enterPassword" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="login"
        android:textColor="@color/icons"
        android:id="@+id/loginButton"
        android:onClick="checkAuth"
        android:layout_below="@+id/passwordForLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarOfLoading"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:visibility="invisible"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="20dp"
       />


</RelativeLayout>
