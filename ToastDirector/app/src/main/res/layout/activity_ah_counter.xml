<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.karthikravindrarao.ToastDirector.AhCounter"
    android:id="@+id/parentRelativeLayoutofAhCounter">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/enterName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:hint="Enter Name" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstLinear"
        tools:context="org.tmdistrict92.toastmasters.AhCounterActivity"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/enterName"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/crutchWordId"
            android:onClick="crutchIncrement"
            android:text="0"
            android:textSize="40sp"
            android:textColor="@color/icons"
            android:background="@color/accent"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crutch Words"
        android:id="@+id/textView1"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_weight="0.75"
        android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondLinear"
        tools:context="org.tmdistrict92.toastmasters.AhCounterActivity"
        android:layout_below="@+id/firstLinear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/fillerIncrementId"
            android:onClick="fillerIncrement"
            android:text="0"
            android:textSize="40sp"
            android:textColor="@color/icons"
            android:background="@color/accent"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filler Words"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:layout_weight="0.75"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/secondLinear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/pauseIncrementId"
            android:onClick="pauseIncrement"
            android:text="0"
            android:textSize="40sp"
            android:textColor="@color/icons"
            android:background="@color/accent"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unwanted \n Pauses"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:layout_weight="0.75"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="SAVE TO REPORT"
        android:textColor="@color/icons"
        android:id="@+id/ahCounterSaveButtonId"
        android:onClick="ahCounterSaveButton"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        />




</RelativeLayout>
