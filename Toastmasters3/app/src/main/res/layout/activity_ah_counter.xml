<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.district92.toastmasters.AhCounterActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstLinear"
        tools:context="com.district92.toastmasters.AhCounterActivity"
        android:layout_marginTop="25dp"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/crutchWordId"
            android:onClick="crutchIncrement"
            android:text="0"
            android:textSize="45sp"
            android:textColor="@color/icons" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crutch Words"
        android:id="@+id/textView1"
        android:layout_gravity="center"
        android:textSize="35sp"
        android:layout_weight="0.75"
        android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondLinear"
        tools:context="com.district92.toastmasters.AhCounterActivity"
        android:layout_below="@+id/firstLinear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/fillerIncrementId"
            android:onClick="fillerIncrement"
            android:text="0"
            android:textSize="45sp"
            android:textColor="@color/icons" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filler Words"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:layout_weight="0.75"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/secondLinear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/pauseIncrementId"
            android:onClick="pauseIncrement"
            android:text="0"
            android:textSize="45sp"
            android:textColor="@color/icons" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unwanted Pauses"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:layout_weight="0.75"
            android:gravity="center"/>
    </LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Reset"
        android:textColor="@color/icons"
        android:textSize="25sp"
        android:id="@+id/ahCounterResetButtonId"
        android:onClick="ahCounterResetButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
